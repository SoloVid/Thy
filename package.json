{
  "name": "thylang",
  "version": "1.0.0",
  "description": "Simple language for thy mobile programming",
  "main": "lib/index.js",
  "types": "lib/index.d.ts",
  "scripts": {
    "build": "esbuild src/index.ts --bundle --platform=node --outfile=lib/index.js",
    "check-types": "tsc --noEmit",
    "clean": "node -p \"require('fs').rmSync('lib',{force:true,recursive:true})\"",
    "generate-declarations": "tsc --emitDeclarationOnly",
    "interpret": "node -r esbuild-register src/interpreter/cli.ts",
    "preprepublish": "npm run clean",
    "prepublish": "run-p --aggregate-output build test generate-declarations",
    "start": "node lib/index.js",
    "test": "run-p --aggregate-output check-types test:uts",
    "test:uts:interpreter": "uts -r esbuild-register src/interpreter",
    "test:uts:interpreter:watch": "watchlist --eager src/interpreter -- npm run test:uts:interpreter",
    "test:uts": "uts -r esbuild-register src",
    "test:watch": "watchlist --eager src -- npm run test:uts"
  },
  "author": "Grant Dennison",
  "license": "MIT",
  "dependencies": {
    "@babel/code-frame": "^7.16.7",
    "chalk": "^4.1.2",
    "glob": "^8.0.1",
    "lezer": "^0.13.0",
    "yargs": "^17.4.1"
  },
  "devDependencies": {
    "@tsconfig/node16": "^1",
    "@types/babel__code-frame": "^7.0.3",
    "@types/glob": "^7.2.0",
    "@types/jest": "^27.0.2",
    "@types/node": "^16",
    "@types/yargs": "^17.0.10",
    "esbuild": "^0.15.5",
    "esbuild-register": "^3.3.3",
    "expect": "^28.1.3",
    "npm-run-all": "^4.1.5",
    "typescript": "~4.7",
    "under-the-sun": "^1.0.0",
    "watchlist": "^0.3.1"
  }
}
