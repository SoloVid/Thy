{
  "name": "thylang",
  "version": "0.1.0",
  "description": "Simple language for thy mobile programming",
  "main": "lib/index.js",
  "types": "lib/index.d.ts",
  "scripts": {
    "build": "esbuild src/index.ts --bundle --platform=node --outfile=lib/index.js",
    "build:editor-client": "esbuild src/editor/client.tsx --bundle --platform=browser --jsx=automatic --outfile=playground/editor-client.js --sourcemap",
    "check-types": "tsc --noEmit",
    "clean": "node -p \"require('fs').rmSync('lib',{force:true,recursive:true})\"",
    "generate-declarations": "tsc --emitDeclarationOnly",
    "home:build": "esbuild src/home/pages/index.tsx src/home/pages/algorithms.tsx src/home/pages/from-the-top.tsx src/home/pages/vs-typescript.tsx --bundle --platform=browser --jsx=automatic --outdir=home --outbase=src/home/pages --sourcemap",
    "home:dev": "esbuild src/home/pages/index.tsx src/home/pages/algorithms.tsx src/home/pages/from-the-top.tsx src/home/pages/vs-typescript.tsx --bundle --platform=browser --jsx=automatic --outdir=home --outbase=src/home/pages --sourcemap --servedir=home",
    "interpret": "node -r esbuild-register src/interpreter/cli.ts",
    "apreprepublish": "npm run clean",
    "aprepublish": "run-p --aggregate-output build test generate-declarations",
    "serve": "node -r esbuild-register src/editor/server.ts",
    "start": "node lib/index.js",
    "test": "run-p --aggregate-output check-types test:uts",
    "test:uts:interpreter": "uts -r esbuild-register src/interpreter",
    "test:uts:interpreter:watch": "watchlist --eager src/interpreter -- npm run test:uts:interpreter",
    "test:uts:std-lib": "uts -r esbuild-register src/std-lib",
    "test:uts:std-lib:watch": "watchlist --eager src/std-lib -- npm run test:uts:std-lib",
    "test:uts": "uts -r esbuild-register src",
    "test:watch": "watchlist --eager src -- npm run test:uts"
  },
  "author": "Grant Dennison",
  "license": "MIT",
  "dependencies": {
    "@babel/code-frame": "^7.16.7",
    "@stitches/react": "^1.2.8",
    "chalk": "^4.1.2",
    "glob": "^8.0.1",
    "lezer": "^0.13.0",
    "prismjs": "^1.29.0",
    "yargs": "^17.4.1"
  },
  "devDependencies": {
    "@tsconfig/node16": "^1",
    "@types/babel__code-frame": "^7.0.3",
    "@types/glob": "^7.2.0",
    "@types/jest": "^27.0.2",
    "@types/node": "^16",
    "@types/prismjs": "^1.26.0",
    "@types/yargs": "^17.0.10",
    "ace-builds": "^1.14.0",
    "esbuild": "^0.15.5",
    "esbuild-register": "^3.3.3",
    "expect": "^28.1.3",
    "npm-run-all": "^4.1.5",
    "preact": "^10.11.3",
    "typescript": "~4.7",
    "under-the-sun": "file:../under-the-sun",
    "watchlist": "^0.3.1"
  }
}
